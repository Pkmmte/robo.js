{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/core/*": ["src/core/*"],
			"~/engines/*": ["src/engines/*"],
			"~/events/*": ["src/events/*"]
		},
		"target": "ESNext",
		"types": ["node"],
		"lib": ["esnext", "dom"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
